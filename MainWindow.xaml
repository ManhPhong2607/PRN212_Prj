<Window x:Class="PRN212_Prj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRN212_Prj"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="800">
    <Grid VerticalAlignment="Center">
        <TextBlock Text="Fast Food Management System" FontSize="24"
                FontWeight="Bold" HorizontalAlignment="Center" Margin="0,-1,0,351"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,52,0,0">
            <Button Content="Manage Tables" Margin="15" Width="200" Height="50" Click="ManageTables_Click"/>
            <Button Content="Manage Menu" Margin="15" Width="200" Height="50" Click="ManageMenu_Click"/>
            <Button Content="Manage Orders" Margin="15" Width="200" Height="50" Click="ManageOrder_Click"/>
            <Button Content="Manage Account" Margin="15" Width="200" Height="50" Click="ManageAccount_click"/>
            <Button Content="Customer Info" Margin="15" Width="200" Height="50" Click="Info_Click"/>
            <Button Content="Back" Margin="15" Width="200" Height="50" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
